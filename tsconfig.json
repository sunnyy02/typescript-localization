{
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "ES6",
      "esModuleInterop": true
    },
    "esm": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "strictNullChecks": true
  }
}
